<?xml version="2.0" encoding="UTF-8"?>
<widget  xmlns     = 'http://www.w3.org/ns/widgets'
        xmlns:gap = 'http://phonegap.com/ns/1.0'
		id="ABCdelosPadres" version="3.0.4">

	<name>El ABC de los Padres</name>
	<description>El ABC de los Padres</description>
	<author>SMMM</author>	<gap:platforms>
		<gap:platform name="ios" />
		<gap:platform name="android" />
	</gap:platforms>	

	<icon src="abclogo.png" width="128" height="128" gap:role="default" />	
	<icon src="abclogo57.png" width="57" height="57" gap:role="default" />	
	<icon src="abclogo72.png" width="72" height="72" gap:role="default" />	
	<preference name="permissions" value="none"/>
	<preference name="phonegap-version" value="2.9.0" />
	<access origin="*" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="target-device" value="universal" />
	<icon src="icon.png" width="512" height="512" gap:role="default" />	
	<icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

	<icon src="icons/ios/57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/ios/72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/ios/76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icons/ios/120.png" gap:platform="ios" width="120" height="120" />
	<icon src="icons/ios/152.png" gap:platform="ios" width="152" height="152" />
	<icon src="icons/ios/114.png" gap:platform="ios" width="114" height="114" />
